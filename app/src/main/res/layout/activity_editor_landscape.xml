<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="com.retroteam.studio.retrostudio.EditorLandscape"
    android:id="@+id/track_base">

    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:alpha="50"
        android:text="@string/track_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/track_view" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/track_layout0">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/track_container0"
                android:background="#79000000"
                android:fillViewport="false"
                android:clickable="true"
                android:outlineProvider="bounds">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:rowCount="1"
                    android:columnCount="100"
                    android:id="@+id/track0"
                    android:background="#79000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/textView2"
                        android:textAlignment="gravity"
                        android:textSize="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:autoText="false"
                        android:phoneNumber="false"
                        android:gravity="center" />
                </GridLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/track_container1"
                android:background="#79000000"
                android:fillViewport="false"
                android:clickable="true">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:rowCount="1"
                    android:columnCount="100"
                    android:id="@+id/track1"
                    android:background="#79000000">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/textView"
                        android:textAlignment="gravity"
                        android:textSize="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:autoText="false"
                        android:phoneNumber="false"
                        android:gravity="center" />
                </GridLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/track_container2"
                android:background="#79000000"
                android:fillViewport="false"
                android:longClickable="true"
                android:clickable="true">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:rowCount="1"
                    android:columnCount="100"
                    android:id="@+id/track2"
                    android:background="#79000000" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/textView3"
                        android:textAlignment="gravity"
                        android:textSize="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:autoText="false"
                        android:phoneNumber="false"
                        android:gravity="center" />
                </GridLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/track_container3"
                android:background="#79000000"
                android:fillViewport="false"
                android:longClickable="true"
                android:clickable="true"
                android:focusable="false">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:rowCount="1"
                    android:columnCount="100"
                    android:id="@+id/track3"
                    android:background="#79000000" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:id="@+id/textView4"
                        android:textAlignment="gravity"
                        android:textSize="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:autoText="false"
                        android:phoneNumber="false"
                        android:gravity="center" />
                </GridLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:id="@+id/notedrawercontainer">

        <hollowsoft.slidingdrawer.SlidingDrawer
            android:id="@+id/notedrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            drawer:handle="@+id/handle"
            drawer:content="@+id/content"
            android:foregroundGravity="top">

            <TextView
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="#01579B"
                android:gravity="center"
                android:text="Notes" />

            <HorizontalScrollView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ACC1"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/notecontainer"
                    android:src="@drawable/note_icon_small"
                    android:contentDescription="NoteContainer"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

        </hollowsoft.slidingdrawer.SlidingDrawer>
    </FrameLayout>

</FrameLayout>
