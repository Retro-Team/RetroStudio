<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.retroteam.studio.retrostudio"
    tools:overrideLibrary="hollowsoft.slidingdrawer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditorLandscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_editor_landscape"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.DeviceDefault"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.retroteam.studio.retrostudio.MainActivity" />
        </activity>
        <activity
            android:name=".MeasureEditor"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_editor_landscape"
            android:parentActivityName=".EditorLandscape"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.DeviceDefault"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.retroteam.studio.retrostudio.EditorLandscape" />
        </activity>
    </application>

</manifest>
